<div class="container">
  <h1 class="text-center">Discover Cocktail Recipes</h1>

  <div class="row">
    <h2 class="text-center">Trending</h2>

    <div class="row">
      <!-- Card -->
      <% @cocktails.each do |cocktail| %>

      <div class="col-xs-12 col-sm-4">
          <div class="card-description">
            <h2> <%= cocktail.name  %> </h2>
          </div>
          <%= link_to "", cocktail_path(cocktail), class: "card-link" %>
      </div>
      <% end %>

      <div class="pad10">
        <%= link_to "Add cocktail", new_cocktail_path, class: "btn btn-primary pad20" %>
      </div>
    </div>
  </div>
</div>

